{
    "name" : "S2KPrime Screenshare Extension",
    "author": "S2KPrime",
    "version" : "1.0.0",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "Chrome Extension granting WebRTC screen capturing capabilities to S2KPrime meetings.",
    "homepage_url": "https://series2k.com/",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": true
    },
    "externally_connectable": {
       "matches": [
           "*://*.s2kprime.com/*",
           "*://*.bigbluebutton.org/*"
         ]
    },
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}

